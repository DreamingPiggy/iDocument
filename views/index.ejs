<%- include header %>
   <div id="container">

      <!--  Outer wrapper for presentation only, this can be anything you like -->
      <div id="banner-slide">

        <!-- start Basic Jquery Slider -->
        <ul class="bjqs">
          <li><a href=""><img src="img/cover.png"></a></li>
          <li><img src="img/banner02.jpg" </li>
          <li><img src="img/banner03.jpg" </li>
        </ul>
        <!-- end Basic jQuery Slider -->

      </div>
      <!-- End outer wrapper -->
      
      <!-- attach the plug-in to the slider parent element and adjust the settings as required -->
      <script class="secret-source">
        jQuery(document).ready(function($) {
          
          $('#banner-slide').bjqs({
            animtype      : 'slide',
            height        : 518,
            width         : 1188,
            responsive    : true,
            randomstart   : true
          });
          
        });
      </script>

    </div>

<div class = "main">
    <!-- docs -->
    <div class = "main_left col-xs-7">
        <div class ="main_title">
        <img src="/img/main_title_icon.png" alt="">
            热门文档
        </div>
        <div>
            <table class = "main_left_content">
                <thead>
                <tr>
                    <th>文档名称</th>
                    <th>上传时间</th>
                    <th>下载次数</th>
                </tr>
                </thead>
                <tbody>
                <% if (docsdata[0][0]) { %>
                <% docsdata[0].forEach(function(hotdoc) { %>
                <tr>
                    <td><a class="fancybox" href="#<%= hotdoc._id %>"><%= hotdoc.title %></a></td>
                    <td>
                    <% 
                    var date = new Date(hotdoc.updateTime * 1000);
                    var 
                    y = date.getFullYear(),
                    m = date.getMonth() + 1,
                    s = date.getDate();
                     %>
                    <%= y + '-' + m + '-' + s %>
                    </td>
                    <td><%= hotdoc.downloads %></td>
                    <div style="">
                        <div id="<%= hotdoc._id %>">
                            <!-- fancybox content -->
                            <a id = "download" href="/download/<%= hotdoc.link %>"></a>
                        </div>
                    </div>
                </tr>
                <% }) %>
                <% } else { %>
                <tr>
                    <td colspan="3">
                        暂无文档
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <div class = "main_right col-xs-5">
        <div class ="main_title">
        <img src="/img/main_title_icon.png" alt="">
            最新上传
        </div>
        <div>
            <table class = "main_right_content">
                <thead>
                <tr>
                    <th>文档名称</th>
                    <th>上传时间</th>
                </tr>
                </thead>
                <tbody>
                <% if (docsdata[1][0]) { %>
                <% docsdata[1].forEach(function(newdoc) { %>
                <tr>
                    <td><a href="#<%= newdoc._id %>"><%= newdoc.title %></a></td>
                    <td>
                    <% 
                    var date = new Date(newdoc.updateTime * 1000);
                    var 
                    y = date.getFullYear(),
                    m = date.getMonth() + 1,
                    s = date.getDate();
                     %>
                    <%= y + '-' + m + '-' + s %></td>
                    <div style="display: none;">
                        <div id="<%= newdoc._id %>">
                            <!-- fancybox content -->
                            <a href="/download/<%= newdoc.link %>">下载</a>
                        </div>
                    </div>
                </tr>
                <% }) %>
                <% } else { %>
                <tr>
                    <td colspan="3">
                        暂无文档
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include footer %>