<%- include header %>
<div>
    <div>
        <strong><%= college.collegeName %></strong>
    </div>
    <!-- list all professional courses -->
    <% if(courses[0]) { %>
    <% courses.forEach(function(course) { %>
    <div>
        <div>
            <strong><%= course.courseName %></strong>
            <a href="/course/<%= course._id %>">更多&nbsp;&raquo;</a>
        </div>
        <div>
            <ul>
                <% documents.forEach(function(doc) { %>
                <% if(doc.course === course._id ) { %>
                <li>
                    <span><%= doc.fileType %></span>&nbsp;
                    <a href="#<%= doc._id %>">
                        <%= doc.title %>
                    </a>
                    <div style="display: none;">
                        <div id="<%= doc._id %>">
                            <!-- fancybox content -->
                            <a href="/download/<%= doc.link %>">下载</a>
                        </div>
                    </div>
                </li>
                <% if(i === 2) break;%>
                <% } %>
                <% }) %>
            </ul>
        </div>
    </div>
    <% }) %>
    <% } else { %>
    <div>
        <p>暂无文档</p>
    </div>
    <% } %>
</div>
<%- include footer %>